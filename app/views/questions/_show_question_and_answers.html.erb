<hr>
<table>
  <tr>
    <td><a href=<%=user_registration_url + "/#{@question.user.id}"%>><%= image_tag(@question.user.avatar_url, width: 80, height: 80, class: "rounded-circle")%></a></td>
    <td>&nbsp;</td>
    <td><h3>
      <% if (@question.solved?) %>
        <%= image_tag("ok.png", width: 25, height: 25) %>
      <% else %>
        <%= image_tag("cancel.png", width: 25, height: 25) %>
      <% end %>
      <%= t('questions.question')%> â„–<%=@question.id%> <%=t('questions.from') %> <%= link_to(@question.user.name, user_registration_url + "/#{@question.user.id}") %></h3><%= @question.body %><a align="left"><br>
      <%= @question.created_at.strftime("%d.%m.%Y, %H:%M") %>
      <br><font size="4">
      <%=render 'likes/show_question_likes'%>
      </font>
      </a></td>
  </tr>
</table>
<hr>
<% if (@question.answers.count != 0) %>
  <%@question.answers.each do |answer|%>
  <table>
  <tr>
    <td><a href=<%=user_registration_url + "/#{answer.user.id}"%>><%= image_tag(answer.user.avatar_url, width: 80, height: 80, class: "rounded-circle")%></a></td>
    <td>&nbsp;</td>
    <td><h3><%=link_to(answer.user.name, user_registration_url + "/#{answer.user.id}")%></h3><%=answer.body%><a align="left">
    <br><%=answer.updated_at.strftime("%d.%m.%Y, %H:%M")%>
    <br><font size="4">
    <%@answer = answer%>
    <%=render 'likes/show_answer_likes'%>
    </font></a></td>
  </tr>
  </table>
  <hr>
  <% end %>
<% end %>
