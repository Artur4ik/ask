<% unless @q.count == 0 %>
  <h3>Новые вопросы:</h3>
  <hr>
  <%@q.each do |i|%>
    <table>
      <tr>
        <td><%=image_tag(User.find(i.user_id).avatar_url, width: 80, height: 80, class: "rounded-circle")%></td>
        <td>&nbsp;</td>
        <td><h3>
          <%if (Answer.where(question_id: i.id).count == 0)%>
            <%= image_tag("cancel.png", width: 25, height: 25) %>
          <%else %>
            <%= image_tag("ok.png", width: 25, height: 25) %>
          <%end %>
          <%=link_to "Вопрос №#{i.id}", question_path(i.id) %> от <%=link_to User.find(i.user_id).name, "/users/#{User.find(i.user_id).id}"%></h3><%=i.body%><p align="left"><%=i.created_at.strftime("%d.%m.%Y, %H:%M")%></p></td>
      </tr>
    </table>
    <hr>
  <%end%>
<%else%><hr>
  <h2>Нет вопросов</h2>
  <hr color="green">
<%end %>
<%unless @u.count == 0 %>
  <h4>Пользователи:
    <%@u.each do |i|%>
      <%=image_tag(User.find(i.id).avatar_url, width: 23, height: 23, class: "rounded-circle")%>&nbsp;<%=link_to "#{User.find(i.id).name}", "/users/#{User.find(i.id).id}"%>&nbsp;
    <%end %>
    <hr>
<%end %></h4>
<%=button_to "Добавить новый вопрос", new_question_path, method: :get, class: "btn btn-warning"%>