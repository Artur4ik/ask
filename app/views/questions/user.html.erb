<table>
  <hr>
  <tr>
    <td><a href=<%="#{User.find(params[:id]).avatar_url}"%>><%=image_tag(User.find(params[:id]).avatar_url, width: 128, height: 128, class: "rounded-circle")%></a>&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td><%="#{t('user.name')}"%>:<h3><%=User.find(params[:id]).name%></h3><%="#{t('user.sign_up_date')}"%>:<br><h3><%=User.find(params[:id]).created_at.strftime("%d.%m.%Y")%></h3></td>
    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td><%="#{t('user.email')}"%>:<h3><%=User.find(params[:id]).email%><%= image_tag("ok.png") %></h3><%="#{t('user.country')}"%>:
      <h3>
        <%if User.find(params[:id]).country == "Российская Федерация" || User.find(params[:id]).country == "Россия"%>
          🇷🇺
          <%end %>
        <%if User.find(params[:id]).country == "Республика Беларусь"%>
          🇧🇾
        <%end %>
        <%if User.find(params[:id]).country == "Украина"%>
          🇺🇦
        <%end %>
        <%=User.find(params[:id]).country%>
      </h3></td>
    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td>
      <%if (user_signed_in?  && current_user.id == User.find(params[:id]).id)%>
        <a href=<%=edit_user_registration_path%>><%= image_tag("edit.png", width: 32, height: 32) %></a>
        <%end %>

    </td>
  </tr>
</table><hr>
<%if (user_signed_in?  && current_user.id == User.find(params[:id]).id)%>
  <h3><%="#{t('application.my_questions')}"%>:</h3><hr>
  <details>
    <summary><strong><%="#{t('user.add_question')}"%></strong></summary>
    <%=form_for :post, url: questions_path do |f|%>
      <p><%= image_tag(User.find(current_user.id).avatar_url, width: 30, height: 30, class: "rounded-circle")%>&nbsp;
      <%=f.text_field :body%>&nbsp;<%=f.submit "#{t('user.add')}", class: "btn btn-warning"%></p>
    <% end %>
    </details>
  <%else %>
<h3><%="#{t('user.questions_from_user')}"%>:</h3>
  <%end %>
  <hr>
<% unless @q.count == 0
     @q.each do |i|
%>
    <table>
      <tr>
        <%if (Answer.where(question_id: i.id).count == 0)%>
          <td><%= image_tag("cancel.png", width: 25, height: 25) %></td>
        <%else %>
          <td><%= image_tag("ok.png", width: 25, height: 25) %></td>
        <%end %>
        <td><h3><%=link_to "#{t('questions.question')}" + " №#{i.id}", question_path(i.id)%></h3></td>
      </tr>
    </table>
    <%=i.body%>
    <p><%=i.created_at.strftime("%d.%m.%Y, %H:%M")%></p>
    <hr color="green">
  <%end%>
<%else%>
  <h2><%="#{t('questions.no_questions')}"%></h2>
  <hr color="green">
<%end %>
<%=button_to "#{t('application.main_page')}", questions_path, method: :get, class: "btn btn-warning"%>
