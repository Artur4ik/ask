<hr>
<table>
  <tr>
    <td><a href=<%=user_registration_url + "/#{@q.user_id}"%>><%= image_tag(User.find(@q.user_id).avatar_url, width: 80, height: 80, class: "rounded-circle")%></a></td>
    <td>&nbsp;</td>
    <td><h3>
      <%if (Answer.where(question_id: @q.id).count == 0)%>
        <%= image_tag("cancel.png", width: 25, height: 25) %>
      <%else %>
        <%= image_tag("ok.png", width: 25, height: 25) %>
      <%end %>
      <%="#{t('questions.question')}"%> â„–<%=@q.id%> <%="#{t('questions.from')}"%> <%=link_to User.find(@q.user_id).name, user_registration_url + "/#{@q.user_id}"%></h3><%=@q.body%><p align="left"><%=@q.created_at.strftime("%d.%m.%Y, %H:%M")%></p></td>
  </tr>
</table>
<hr>
<% if @a.count != 0 %>
  <%@a.each do |i|%>
  <table>
  <tr>
    <td><a href=<%=user_registration_url + "/#{i.answer_user_id}"%>><%= image_tag(User.find(i.answer_user_id).avatar_url, width: 80, height: 80, class: "rounded-circle")%></a></td>
    <td>&nbsp;</td>
    <td><h3><%=link_to User.find(i.answer_user_id).name, user_registration_url + "/#{i.answer_user_id}"%></h3><%=i.body%><p align="left"><%=i.updated_at.strftime("%d.%m.%Y, %H:%M")%></p></td>
  </tr>
  </table>


  <hr color="red">
    <%end %>
<%end %>


<%if user_signed_in? %>
  <details>
    <summary><strong><%="#{t('questions.add_new_answer')}"%></strong></summary>
    <%=form_for :question, url: question_path, method: :put do |f|%>
      <p><h3><%= image_tag(User.find(current_user.id).avatar_url, width: 26, height: 26, class: "rounded-circle")%>&nbsp;<%=User.find(current_user.id).name%>:</h3></p>
      <p><%=f.text_area :answer, :cols => 50, :rows => 5%></p>
      <p><%=f.submit "#{t('questions.answer')}", class: "btn btn-warning"%></p>
    <% end %>
    </details>
    <hr>
<%end %>


<table>
  <tr>
    <%if(user_signed_in? && User.find(@q.user_id).id == current_user.id)%>
    <td><%=button_to "#{t('questions.delete_question')}", question_path(@q.id), method: :delete, class: "btn btn-warning"%></td>
      <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <%end%>
    <td><%=button_to "#{t('application.main_page')}", questions_path, method: :get, class: "btn btn-warning"%></td>
  </tr>
</table>
