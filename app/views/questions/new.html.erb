<hr>
<%if user_signed_in? %>
  <%=form_for :post, url: questions_path do |f|%>
    <p><h3><%= image_tag(User.find(current_user.id).avatar_url, width: 80, height: 80, class: "rounded-circle")%>&nbsp;<%="#{t('questions.question')}"%> <%="#{t('questions.from')}"%> <%=current_user.name%>:</h3></p>
    <p><%=f.text_area :body, :cols => 50, :rows => 5%></p>
    <p><%=f.submit "#{t('user.add')}", class: "btn btn-warning"%></p>
  <% end %>
<% else %>

<% end %>
<hr color="green">
<%=button_to "#{t('application.main_page')}", questions_path, method: :get, class: "btn btn-warning"%>
