<% unless @questions.count == 0 %>
  <hr>
  <%@questions.each do |question|%>
    <table>
      <tr>
        <td><a href=<%=user_registration_url + "/#{question.user.id}"%>><%=image_tag(question.user.avatar_url, width: 80, height: 80, class: "rounded-circle")%></a></td>
        <td>&nbsp;</td>
        <td><h3>
          <%if (user_signed_in?) && (current_user.id == question.user.id)%>
            <%=link_to(image_tag(question.solved? ? "ok.png" : "cancel.png", width: 25, height: 25), edit_question_path(id: question.id), data: {"turbo-method": :get})%>
          <%else%>
            <%=image_tag(question.solved? ? "ok.png" : "cancel.png", width: 25, height: 25)%>
          <%end%>
          <%=link_to "#{t('questions.question')} â„–#{question.id}", question_path(id: question.id, locale: I18n.locale) %> <%="#{t('questions.from')}"%> <%=link_to question.user.name, user_registration_url + "/#{question.user.id}"%></h3><%=question.body%><a align="left"><br><%=question.created_at.strftime("%d.%m.%Y, %H:%M")%><br><font size="4">
          <%@question = question%>
          <%=render 'likes/show_question_likes'%>
          </font>
            &nbsp;&nbsp;<%=image_tag('views.png')%>&nbsp;<%=@question.views%>
          </a></td>
      </tr>
    </table>
    <hr>
  <%end%>
<%else%><hr>
  <h2><%=t('questions.no_questions')%></h2>
  <hr>
<%end %>
