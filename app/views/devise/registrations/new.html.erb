<hr>
<h2><%="#{t('devise.registration_form.registration')}"%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "#{t('devise.registration_form.name')}:" %><br>
    <%= f.text_field :name, autofocus: true%>
    <p></p>
  </div>

  <div class="field">
    <%= f.label "#{t('devise.registration_form.email')}"%><br>
    <%= f.email_field :email, autocomplete: "email" %>
    <p></p>
  </div>

  <div class="field">
    <%= f.label "#{t('devise.registration_form.country')}"%><br>
    <%= f.select(:country, ['Российская Федерация', 'Республика Беларусь', 'Украина'])%>
    <p></p>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <% if @minimum_password_length %>
    <em></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <p></p>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <p></p>
  </div>

  <div class="actions">
    <%= f.submit "#{t('devise.registration_form.sign_up')}", class: "btn btn-warning" %>
  </div>
<% end %>
<hr>
