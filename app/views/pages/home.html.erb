<h1 align="center"><%=t('home.logo_1')%></h1><br>
<p align="center">
<%=image_tag("home_welcome.png", width: "40%", height: "40%")%>
</p>
<br>
<div class="card">
  <div class="card-header">
    <%=t('home.quote')%>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%=t('home.quote_text')%></p>
      <footer class="blockquote-footer"><%=t('home.quote_author')%><cite title="Source Title"></cite></footer>
    </blockquote>
  </div>
</div>
<br><h4><%=t('home.logo_2')%></h4><br>
<%unless user_signed_in?%>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%=image_tag("ok.png")%>&nbsp;<%=t('home.sign_up_now')%></h5>
        <p class="card-text"><%=t('home.sign_up_rights')%></p>
        <a href=<%=new_user_registration_path%> class="btn btn-warning"><%=t('home.sign_up')%></a>&nbsp;&nbsp;<%=t('home.or')%>&nbsp;&nbsp;<a href=<%=new_user_session_path%> class="btn btn-warning"><%=t('home.sign_in')%></a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%=image_tag("ok.png")%>&nbsp;<%=t('home.guest')%></h5>
        <p class="card-text"><%=t('home.guest_rights')%></p><br>
        <a href=<%=users_path%> class="btn btn-warning"><%=t('home.watch')%></a>
      </div>
    </div>
  </div>
</div>
<%else%>
<%=button_to("Перейти к вопросам", user_feed_path, method: :get, class: "btn btn-warning")%>
<%end%>
<br>
